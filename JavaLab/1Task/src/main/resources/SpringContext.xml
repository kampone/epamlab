<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@//localhost:1521/xe" />
		<property name="username" value="NewsManagement" />
		<property name="password" value="root" />
	</bean>

	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="tagDAO" class="com.epam.newsmanagement.dao.tag.impl.TagDAOImpl">
		<property name="dataSource" ref="dataSource"/> 
	</bean>
	
	<bean id="tagService" class="com.epam.newsmanagement.service.tag.impl.TagServiceImpl">
		<property name="tagDAO" ref="tagDAO"/>
	</bean>
	
	<bean id="commentDAO" class="com.epam.newsmanagement.dao.comment.impl.CommentDAOImpl">
		<property name="dataSource" ref="dataSource"/> 
	</bean>
	
	<bean id="commentService" class="com.epam.newsmanagement.service.comment.impl.CommentServiceImpl">
		<property name="commentDAO" ref="commentDAO"/>
	</bean>
	
	

</beans>