<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="localPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.epam.newsmanagement.entity.News</class>
		<class>com.epam.newsmanagement.entity.Comment</class>
		<class>com.epam.newsmanagement.entity.Author</class>
		<class>com.epam.newsmanagement.entity.Tag</class>
		<shared-cache-mode>NONE</shared-cache-mode>
	</persistence-unit>
</persistence>
